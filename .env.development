# Development Environment Configuration
# Database Configuration
DATABASE_URL="file:./data/imaginarium.db"

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug

# Database Connection Pool (for PostgreSQL in development)
DATABASE_CONNECTION_LIMIT=5
DATABASE_CONNECTION_TIMEOUT=30000

# Migration Settings
MIGRATION_RUN_IN_BAND=true
MIGRATION_BACKUP_ENABLED=true
MIGRATION_BACKUP_DIR="./prisma/backups"

# Development Tools
PRISMA_GENERATE_SKIP_AUTOINSTALL=false
PRISMA_TELEMETRY_DISABLED=false

# Debugging
DEBUG_QUERIES=false
DEBUG_MIGRATIONS=true