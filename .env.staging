# Staging Environment Configuration
# Database Configuration
DATABASE_URL="postgresql://username:password@staging-host:5432/database"

# Staging Settings
NODE_ENV=staging
LOG_LEVEL=debug

# Database Connection Pool
DATABASE_CONNECTION_LIMIT=10
DATABASE_CONNECTION_TIMEOUT=45000

# Migration Settings
MIGRATION_RUN_IN_BAND=false
MIGRATION_BACKUP_ENABLED=true
MIGRATION_BACKUP_DIR="./backups"
MIGRATION_BACKUP_RETENTION_DAYS=7

# Staging Optimizations
PRISMA_GENERATE_SKIP_AUTOINSTALL=false
PRISMA_TELEMETRY_DISABLED=true

# Testing
MIGRATION_REQUIRE_CONFIRMATION=false
MIGRATION_MAINTENANCE_MODE=false

# Monitoring
ENABLE_QUERY_LOGGING=true
ENABLE_MIGRATION_LOGGING=true
DEBUG_MIGRATIONS=true