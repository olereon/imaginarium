# Production Environment Configuration
# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database"

# Production Settings
NODE_ENV=production
LOG_LEVEL=info

# Database Connection Pool
DATABASE_CONNECTION_LIMIT=20
DATABASE_CONNECTION_TIMEOUT=60000

# Migration Settings
MIGRATION_RUN_IN_BAND=false
MIGRATION_BACKUP_ENABLED=true
MIGRATION_BACKUP_DIR="./backups"
MIGRATION_BACKUP_RETENTION_DAYS=30

# Production Optimizations
PRISMA_GENERATE_SKIP_AUTOINSTALL=true
PRISMA_TELEMETRY_DISABLED=true

# Security
MIGRATION_REQUIRE_CONFIRMATION=true
MIGRATION_MAINTENANCE_MODE=true

# Monitoring
ENABLE_QUERY_LOGGING=false
ENABLE_MIGRATION_LOGGING=true