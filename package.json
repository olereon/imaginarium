{
  "name": "imaginarium",
  "version": "1.0.0",
  "description": "AI content generation pipeline automation platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build:libs && npm run build:apps",
    "build:libs": "npm run build --workspace=@imaginarium/shared && npm run build --workspace=@imaginarium/core && npm run build --workspace=@imaginarium/ui",
    "build:apps": "npm run build --workspace=@imaginarium/server && npm run build --workspace=@imaginarium/client",
    "build:watch": "tsc --build --watch",
    "build:clean": "tsc --build --clean",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:workspaces": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --build --dry --pretty",
    "typecheck:watch": "tsc --build --watch --preserveWatchOutput",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules/.cache tsconfig.tsbuildinfo",
    "prepare": "husky install",
    "dev:client": "npm run dev --workspace=@imaginarium/client",
    "dev:server": "npm run dev --workspace=@imaginarium/server",
    "build:client": "npm run build --workspace=@imaginarium/client",
    "build:server": "npm run build --workspace=@imaginarium/server",
    "test:shared": "vitest run --config packages/shared/vitest.config.ts",
    "test:core": "vitest run --config libs/core/vitest.config.ts",
    "test:ui:lib": "vitest run --config libs/ui/vitest.config.ts",
    "test:client": "vitest run --config apps/client/vitest.config.ts",
    "test:server": "vitest run --config apps/server/vitest.config.ts",
    "test:shared:watch": "vitest --config packages/shared/vitest.config.ts",
    "test:core:watch": "vitest --config libs/core/vitest.config.ts",
    "test:ui:watch": "vitest --config libs/ui/vitest.config.ts",
    "test:client:watch": "vitest --config apps/client/vitest.config.ts",
    "test:server:watch": "vitest --config apps/server/vitest.config.ts",
    "test:shared:coverage": "vitest run --coverage --config packages/shared/vitest.config.ts",
    "test:core:coverage": "vitest run --coverage --config libs/core/vitest.config.ts",
    "test:ui:coverage": "vitest run --coverage --config libs/ui/vitest.config.ts",
    "test:client:coverage": "vitest run --coverage --config apps/client/vitest.config.ts",
    "test:server:coverage": "vitest run --coverage --config apps/server/vitest.config.ts",
    "workspace:install": "npm install --workspaces",
    "workspace:update": "npm update --workspaces",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:dev:start": "./scripts/docker-dev.sh start",
    "docker:dev:stop": "./scripts/docker-dev.sh stop",
    "docker:dev:logs": "./scripts/docker-dev.sh logs",
    "docker:dev:clean": "./scripts/docker-dev.sh clean",
    "docker:prod": "./scripts/docker-prod.sh",
    "docker:prod:deploy": "./scripts/docker-prod.sh deploy",
    "docker:prod:update": "./scripts/docker-prod.sh update",
    "docker:prod:backup": "./scripts/docker-prod.sh backup",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "version:check": "semantic-release --dry-run --no-ci",
    "docs:api": "npm run docs:api --workspace=@imaginarium/server",
    "docs:ui": "npm run build-storybook --workspace=@imaginarium/ui",
    "docs:generate": "npm run docs:generate --workspace=@imaginarium/server && npm run docs:ui",
    "docs:serve": "npm run docs:serve --workspace=@imaginarium/server",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "db:push": "prisma db push",
    "db:seed": "npm run prisma:seed",
    "migrate:dev": "./scripts/migrate-dev.sh",
    "migrate:prod": "./scripts/migrate-prod.sh",
    "migrate:test": "./scripts/test-migration.sh",
    "migrate:rollback": "./scripts/rollback.sh",
    "migrate:deploy": "./scripts/deploy-migration.sh",
    "migrate:status": "./scripts/migrate-dev.sh status",
    "migrate:backup": "./scripts/migrate-prod.sh backup",
    "migrate:cleanup": "./scripts/migrate-prod.sh cleanup",
    "fixtures:load": "tsx prisma/fixtures/load-fixtures.ts load",
    "fixtures:clear": "tsx prisma/fixtures/load-fixtures.ts clear",
    "fixtures:reload": "tsx prisma/fixtures/load-fixtures.ts reload",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "ai",
    "automation",
    "pipeline",
    "content-generation",
    "typescript",
    "nodejs",
    "monorepo"
  ],
  "author": "Imaginarium Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.12",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bcryptjs": "^3.0.2",
    "tsx": "^4.20.3"
  }
}
